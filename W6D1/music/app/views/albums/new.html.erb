<h2>Add an album</h2>

<form action="<%= albums_url %>" method="POST">
    <label for="new-album-band">Album title:</label>
    <input type="text" id="new-album-band" name="album[title]">

    <br>
    <label for="new-album-band">Band: </label>
    <select name="album[band_id]" id="new-album-band">
    <% Band.all.each do |band| %>
        <option value="<%= band.id %>" <%= "selected" if @album.band_id == band.id %> >
        <%= band.name %>
        </option>
    <% end %>
    </select>


    <div>
        <label for="new-album-live">Live</label>
        <input type="radio" name="album[live]" value="t" id="new-album-live"
        <%= "checked" if @album.live %>>

        <label for="new-album-studio">Studio</label>
        <input type="radio" name="album[live]" value="f" id="new-album-studio"
        <%= "checked" if !@album.live %>>
    <div>

    <div>
        <label for='album-year'>Year</label>
        <input id='album-year' type="number" name="album[year]" value="<%= @album.year %>">
    </div>


    <input type="submit" value="Add">
        
</form>
<br><br>
<a href="<%= band_url(@album.band_id) %>">Back to band</a>